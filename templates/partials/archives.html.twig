<ul class="archives list-none p-0">

{% for month,items in archives_data %}
    <li class="mb-2 border-b border-gray-100 last:border-0 pb-2 last:pb-0">
    	<a href="{{ base_url }}/{{ config.plugins.archives.taxonomy_names.month }}{{ config.system.param_sep }}{{ month|date(config.plugins.archives.taxonomy_values.month)|lower|e('url') }}" class="block text-gray-700 hover:text-blue-600 transition-colors">
        {% if archives_show_count %}
        <span class="inline-block px-2 py-1 bg-blue-600 text-white text-xs rounded-full float-right ml-2">{{ items|length }}</span>
        {% endif %}
          <span class="archive_date">{{ month|date(config.plugins.archives.date_display_format) }} </span>
        </a>
    </li>
{% endfor %}
</ul>
