<div class="theme-switcher flex items-center bg-gray-100 dark:bg-gray-800 rounded-full p-1 ml-4 border border-gray-200 dark:border-gray-700">
    <label class="cursor-pointer relative z-10 px-2 py-1 rounded-full transition-colors duration-200 hover:text-primary" title="Light Mode">
        <input type="radio" name="theme" value="light" class="sr-only peer">
        <i class="fa-solid fa-sun text-sm text-gray-500 peer-checked:text-yellow-500 transition-colors"></i>
    </label>
    <label class="cursor-pointer relative z-10 px-2 py-1 rounded-full transition-colors duration-200 hover:text-primary" title="System Preference">
        <input type="radio" name="theme" value="system" class="sr-only peer" checked>
        <i class="fa-solid fa-desktop text-sm text-gray-500 peer-checked:text-blue-500 transition-colors"></i>
    </label>
    <label class="cursor-pointer relative z-10 px-2 py-1 rounded-full transition-colors duration-200 hover:text-primary" title="Dark Mode">
        <input type="radio" name="theme" value="dark" class="sr-only peer">
        <i class="fa-solid fa-moon text-sm text-gray-500 peer-checked:text-indigo-400 transition-colors"></i>
    </label>
</div>
