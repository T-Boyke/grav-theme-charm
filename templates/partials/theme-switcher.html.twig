<div class="theme-switcher inline-flex items-center bg-white dark:bg-gray-800 rounded-full p-1 shadow-sm border border-gray-200 dark:border-gray-700">
    <label class="cursor-pointer relative z-10 px-3 py-1.5 rounded-full transition-all duration-300 ease-in-out hover:bg-gray-100 dark:hover:bg-gray-700 group" title="Light Mode">
        <input type="radio" name="theme" value="light" class="sr-only peer">
        <i class="fa-solid fa-sun text-gray-400 peer-checked:text-yellow-500 transition-colors duration-300 group-hover:text-yellow-500"></i>
    </label>
    <label class="cursor-pointer relative z-10 px-3 py-1.5 rounded-full transition-all duration-300 ease-in-out hover:bg-gray-100 dark:hover:bg-gray-700 group" title="System Preference">
        <input type="radio" name="theme" value="system" class="sr-only peer" checked>
        <i class="fa-solid fa-desktop text-gray-400 peer-checked:text-blue-500 transition-colors duration-300 group-hover:text-blue-500"></i>
    </label>
    <label class="cursor-pointer relative z-10 px-3 py-1.5 rounded-full transition-all duration-300 ease-in-out hover:bg-gray-100 dark:hover:bg-gray-700 group" title="Dark Mode">
        <input type="radio" name="theme" value="dark" class="sr-only peer">
        <i class="fa-solid fa-moon text-gray-400 peer-checked:text-indigo-400 transition-colors duration-300 group-hover:text-indigo-400"></i>
    </label>
</div>
